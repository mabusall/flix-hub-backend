@*
  Email-safe layout with inline styles (no external CSS required).
  - Keeps all existing ViewBags
  - Inline SVG logo (from your provided logo-large.svg)
  - Preserves LinkedIn and Email contact links
*@
@using System
@{
    var isAr = (bool)(ViewBag.IsArabic ?? false);
    var lang = isAr ? "ar" : "en";
    var dir = isAr ? "rtl" : "ltr";
}
<!DOCTYPE html>
<html lang="@lang" dir="@dir" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="x-apple-disable-message-reformatting" />
    <title>@ViewBag.EmailTitle</title>
</head>
<body style="margin:0;padding:0;background-color:#f6f7fb;-webkit-text-size-adjust:100%;-ms-text-size-adjust:100%;font-family:Arial,Helvetica,sans-serif;color:#111;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="border-collapse:collapse;">
        <tr>
            <td align="center" style="padding:24px;">
                <!-- container -->
                <table role="presentation" width="680" cellspacing="0" cellpadding="0" border="0" style="width:680px;max-width:680px;background:#ffffff;border:1px solid #e5e7eb;border-radius:8px;">
                    <!-- header -->
                    <tr>
                        <td align="center" style="padding:20px 24px 0 24px;">
                            <a href="@ViewBag.SiteUrl" style="text-decoration:none;display:inline-block;" aria-label="Home">
                                <div style="height:48px;line-height:0;">
                                    <svg width="40" height="40" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
                                        <defs>
                                            <linearGradient id="flixGradientLarge" x1="0%" y1="0%" x2="100%" y2="100%">
                                                <stop offset="0%" style="stop-color:#6366f1;stop-opacity:1" />
                                                <stop offset="30%" style="stop-color:#7c3aed;stop-opacity:1" />
                                                <stop offset="70%" style="stop-color:#8b5cf6;stop-opacity:1" />
                                                <stop offset="100%" style="stop-color:#a855f7;stop-opacity:1" />
                                            </linearGradient>
                                            <linearGradient id="playGradientLarge" x1="0%" y1="0%" x2="100%" y2="100%">
                                                <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
                                                <stop offset="100%" style="stop-color:#e0e7ff;stop-opacity:0.9" />
                                            </linearGradient>
                                            <filter id="glow">
                                                <feGaussianBlur stdDeviation="2" result="coloredBlur" />
                                                <feMerge>
                                                    <feMergeNode in="coloredBlur" />
                                                    <feMergeNode in="SourceGraphic" />
                                                </feMerge>
                                            </filter>
                                        </defs>

                                        <!-- Outer glow -->
                                        <circle cx="20" cy="20" r="18" fill="url(#flixGradientLarge)" opacity="0.3" filter="url(#glow)" />

                                        <!-- Main circle background -->
                                        <circle cx="20" cy="20" r="18" fill="url(#flixGradientLarge)" stroke="rgba(255,255,255,0.3)" stroke-width="1" />

                                        <!-- Play button triangle -->
                                        <polygon points="15,12 15,28 28,20" fill="url(#playGradientLarge)" stroke="rgba(255,255,255,0.1)" stroke-width="0.5" />

                                        <!-- Decorative elements -->
                                        <circle cx="10" cy="10" r="2.5" fill="rgba(255,255,255,0.4)" opacity="0.7" />
                                        <circle cx="30" cy="30" r="2" fill="rgba(255,255,255,0.3)" opacity="0.8" />
                                        <circle cx="32" cy="12" r="1.5" fill="rgba(255,255,255,0.2)" opacity="0.6" />

                                        <!-- Inner highlight -->
                                        <circle cx="20" cy="20" r="15" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1" opacity="0.5" />
                                    </svg>
                                </div>
                            </a>
                        </td>
                    </tr>
                    <!-- title -->
                    <tr>
                        <td align="center" style="padding:8px 24px 0 24px;">
                            <h1 style="margin:0;font-size:20px;line-height:28px;font-weight:700;color:#111;">@ViewBag.EmailTitle</h1>
                        </td>
                    </tr>
                    <!-- body -->
                    <tr>
                        <td align="@((bool)(ViewBag.IsArabic ?? false) ? "right" : "left")" style="padding:20px 24px 24px 24px;font-size:14px;line-height:22px;">
                            @RenderBody()
                        </td>
                    </tr>
                </table>

                <!-- help card -->
                <table role="presentation" width="680" cellspacing="0" cellpadding="0" border="0" style="width:680px;max-width:680px;margin-top:12px;background:#ffffff;border:1px solid #e5e7eb;border-radius:8px;">
                    <tr>
                        <td align="center" style="padding:20px 24px;">
                            <h2 style="margin:0 0 6px 0;font-size:16px;line-height:22px;font-weight:700;color:#111;">@ViewBag.NeedHelp</h2>
                            <p style="margin:0 0 8px 0;font-size:13px;line-height:20px;color:#374151;">@ViewBag.NeedForHelpMessage</p>
                            <div style="margin:8px 0;">
                                <a href="https://www.linkedin.com/in/mabusall" style="display:inline-block;margin:0 10px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                                        <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z" />
                                    </svg>
                                </a>
                                <a href="mailto:mabusall.developer@gmail.com" style="display:inline-block;margin:0 10px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-envelope-at" viewBox="0 0 16 16">
                                        <path d="M2 2a2 2 0 0 0-2 2v8.01A2 2 0 0 0 2 14h5.5a.5.5 0 0 0 0-1H2a1 1 0 0 1-.966-.741l5.64-3.471L8 9.583l7-4.2V8.5a.5.5 0 0 0 1 0V4a2 2 0 0 0-2-2zm3.708 6.208L1 11.105V5.383zM1 4.217V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v.217l-7 4.2z" />
                                        <path d="M14.247 14.269c1.01 0 1.587-.857 1.587-2.025v-.21C15.834 10.43 14.64 9 12.52 9h-.035C10.42 9 9 10.36 9 12.432v.214C9 14.82 10.438 16 12.358 16h.044c.594 0 1.018-.074 1.237-.175v-.73c-.245.11-.673.18-1.18.18h-.044c-1.334 0-2.571-.788-2.571-2.655v-.157c0-1.657 1.058-2.724 2.64-2.724h.04c1.535 0 2.484 1.05 2.484 2.326v.118c0 .975-.324 1.39-.639 1.39-.232 0-.41-.148-.41-.42v-2.19h-.906v.569h-.03c-.084-.298-.368-.63-.954-.63-.778 0-1.259.555-1.259 1.4v.528c0 .892.49 1.434 1.26 1.434.471 0 .896-.227 1.014-.643h.043c.118.42.617.648 1.12.648m-2.453-1.588v-.227c0-.546.227-.791.573-.791.297 0 .572.192.572.708v.367c0 .573-.253.744-.564.744-.354 0-.581-.215-.581-.8Z" />
                                    </svg>
                                </a>
                            </div>
                            <p style="margin:8px 0 0 0;font-size:12px;color:#6b7280;">@ViewBag.DoNotReplyToThisMail</p>
                        </td>
                    </tr>
                </table>

                <!-- footer -->
                <table role="presentation" width="680" cellspacing="0" cellpadding="0" border="0" style="width:680px;max-width:680px;margin-top:12px;">
                    <tr>
                        <td align="center" style="padding:12px 24px;font-size:12px;color:#6b7280;">
                            <div style="margin-bottom:4px;">&copy; @DateTime.UtcNow.Year @ViewBag.Team</div>
                            <div>@ViewBag.Copyright</div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
